@{
    ViewData["Title"] = "Popularity";
}

<div class="pop-header">
    <div class="row center-container">
        <h1 style="margin-top:100px; font-size:5.5em; font-family: 'Monoton', cursive;">POPULARITY</h1>
    </div>
    <div class="row center-container">
        <button style="margin-top:25px; margin-bottom:35px" class="btn btn-lg btn-success">SIGN UP</button>
    </div>
</div>
<div class="row center-h-container">
    <div class="col-md-3">
        <h2 class="center-container">Add friends</h2>
        <ul>
            <li>Find your friends using email or name</li>
            <li>Distribute tokens amongst friends however you like</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2 class="center-container">Have Fun</h2>
        <ul>
            <li>Collect badges, achievements, and popularity of course!</li>
            <li>Who can get the most tokens?</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2 class="center-container">Be nice!</h2>
        <ul>
            <li>This is not a place for bullying!</li>
        </ul>
    </div>
</div>
